<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tonydicola.bletest.app.MainActivity"
    android:background="#fb77e18e">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/scrollView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#ff0b0c02"
        android:fillViewport="false">

    </ScrollView>

    <TextView
        android:id="@+id/messages"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:background="#fffbfffd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cadence:"
        android:id="@+id/lblCadence"
        android:layout_marginStart="48dp"
        android:layout_above="@+id/messages"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="77dp"
        android:textColor="#ffffee33" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Power:"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/lblCadence"
        android:textColor="#ffffee33" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Speed:"
        android:id="@+id/textView"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/lblCadence"
        android:layout_alignStart="@+id/lblCadence"
        android:textColor="#ffffee33" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtSpeed"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffee33" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtCadence"
        android:layout_alignTop="@+id/lblCadence"
        android:layout_alignStart="@+id/txtSpeed"
        android:textColor="#ffffee33" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtPower"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/txtCadence"
        android:textColor="#ffffee33" />


</RelativeLayout>
