<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="com.tonydicola.bletest.app.MainActivity"
    android:background="#fb77e18e">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffc2411b"
            android:id="@+id/linearLayout"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:src="@drawable/ic_polymer_black_48dp"
                android:layout_weight="1.57" />

            <TextView
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Velometrics Power"
                android:id="@+id/header"
                android:textSize="30dp"
                android:shadowColor="#6f000000"
                android:singleLine="false"
                android:paddingStart="10dp"
                android:password="false"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="11"
            android:id="@+id/displayUnit"
            android:background="#ff000000"
            android:layout_weight="9.5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="20dp"
                android:id="@+id/powerArea"
                android:layout_weight="4"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtPower"
                    android:textColor="#ffc2411b"
                    android:text="30004"
                    android:textSize="90sp"
                    android:textIsSelectable="true"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Watt"
                    android:id="@+id/textView"
                    android:textColor="#ffc2411b"
                    android:textSize="40sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/progressholder"
                android:layout_weight="1">

                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/prgPower"
                    android:max="100"
                    android:progress="90"
                    android:indeterminate="false"
                    android:minHeight="30dp"
                    android:maxHeight="30dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="3"
                android:id="@+id/otherArea">

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="38"
                        android:id="@+id/txtSpeed"
                        android:textColor="#ffffffff"
                        android:textSize="60dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:textIsSelectable="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Kph"
                        android:id="@+id/textView4"
                        android:textColor="#ffffffff"
                        android:textSize="25dp"
                        android:layout_gravity="bottom" />
                </LinearLayout>

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/cadence">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="90"
                        android:id="@+id/txtCadence"
                        android:textColor="#ffc2411b"
                        android:textSize="60dp"
                        android:layout_gravity="bottom" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="rpm"
                        android:id="@+id/textView5"
                        android:textColor="#ffc2411b"
                        android:textSize="25dp"
                        android:layout_gravity="bottom" />

                </LinearLayout>

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:gravity="bottom"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ff000000"
                    android:clickable="false"
                    android:textColor="#ffffffff" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
